 <div class="d-view">
 <a class="d-title">新規登録</a>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
        <%= f.label :ニックネーム %> <em>(6字以内）</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "6" ,:class=>"n-btn" %>
      </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>"n-btn" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,:class=>"n-btn" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（再入力） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,:class=>"n-btn" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" ,:class=>"s-btn" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>